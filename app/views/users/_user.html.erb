<div id="user-<%= user.id %>" class="row">
  <div class="col-lg-6">
    <%= render 'shared/avatar', user: user %>
    <h5 class="name"><%= link_to user.name, user %></h5>
  </div>
  <div class="col-lg-3">
    <div class="friend">
      <%= render 'friends/form', user: user %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="follow">
      <%= render 'follows/form', user: user %>
    </div>
  </div>
</div>
